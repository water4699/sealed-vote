{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node", "mocha", "chai"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "cache", "artifacts", "frontend"]
}

